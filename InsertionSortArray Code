import java.io.File;
import java.io.IOException;
import java.util.Arrays;
import java.util.Scanner;

/**
 * @author Olivia Meier
 * @date Mar 20, 2023
 */

public class InsertionSortArray {

	//main method
	public static void main(String[] args) throws IOException {
		
		//read numbers from file and create array
		File file = new File("random10digits.txt");
	    Scanner input = new Scanner(file);
	    System.out.println(file);
	    int[] arrS = new int[10];
	    int i = 0;
	    while(input.hasNextInt()){
	    	arrS[i++] = input.nextInt();
	    }
		
	    //print original unsorted array 
	    System.out.println(Arrays.toString(arrS));
	    
	    //call method to sort array
		insertionsort(9, arrS);
		
		//print new sorted array 
		System.out.println(Arrays.toString(arrS));
		
	}
	
	//insertion sort method
	public static void insertionsort(int n, int S[]) {
	
		int i;
		int j;
		int x;
		
		for (i = 2; i <= n; i++) {
			x = S[i];
			j = i - 1;
			while(j > 0 && S[j] > x) {
				S[j + 1] = S[j];
				j--;	
			}	
			S[j + 1] = x;
		}
		
	}
	
}
